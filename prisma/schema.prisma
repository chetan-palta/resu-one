generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Keep DATABASE_URL as the single source of truth for connector/credentials
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  resumes   Resume[]
  refreshTokens RefreshToken[]
  createdAt DateTime @default(now())
}

model Resume {
  id        String   @id @default(cuid())
  userId    String
  title     String
  data      Json
  template  String   @default("classic")
  font      String   @default("sans")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
